<h2 align="center"><%= @post.title %></h2>
<%= markdown(remove_separator @post.body) %>
<%= image_tag @post.image(:large) if @post.image.present?  %>
<div class="post-date"><%= @post.published_at.strftime("%B %d, %Y") %></div>

<br>
<br>
<% if current_user.try(:admin?) || Rails.env.development? %>
  <%= link_to 'Edit', edit_admin_post_path(@post) %>
  <%= link_to 'Delete', admin_post_path(@post), method: :delete, data: { confirm: 'Sure?'} %> <br> 
<% end %>
<div align='left'><%= link_to 'Back to posts list', posts_path %></div>