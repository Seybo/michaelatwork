<%= form_for @post, html: { multipart: true } do |f| %>

  <% if @post.errors.any? %>
    <h2><%= pluralize(@post.errors.count, "error") %> prevented this post from saving</h2>
    <ul>
    	<% @post.errors.full_messages.each do |msg| %>
    		<li><%= msg %></li>
			<% end %>
    </ul>
  <% end %>

  <%= f.label :title %><br>
  <%= f.text_field :title %>
  <br><br> 

	<%= f.label :body, "Write your article here" %><br> 
  <%= f.text_area :body, cols: 100, rows: 20 %>
  <br><br>

  <%= f.label :image, "Attach image" %><br> 
  <%= f.file_field :image %>
  <br><br>

	<%= f.submit %>

<% end %>
<div align='left'><%= link_to 'Back to posts list', posts_path %></div>