<% @posts.each do |post| %>
  <h2 align="center"><%= markdown(post.title) %></h2>  
  <%= markdown(post.body) %>
  <%= link_to 'Read more', post_path(post) %>
  <div class="post-date">
    <%= post.published_at.strftime("%B %d, %Y") %>
  </div> <br>

  <% if current_user.try(:admin?) || Rails.env.development? %>
    <%= link_to 'Edit', edit_admin_post_path(post) %>
    <%= link_to 'Delete', admin_post_path(post), method: :delete, data: { confirm: 'Sure?'} %> <br> 
  <% end %>
<% end %>