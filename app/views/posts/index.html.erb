<h1 align="center">Posts listing:</h1>
<h2 align="left"><%= link_to 'New post', new_post_path %></h1>

<% @posts.each do |post| %>
  <h2 align="center"><%= post.title %></h2> <br>	
	<%= truncate(post.body, length: 1000) %> <br> <br> 

	<%= link_to 'Edit', edit_post_path(post) %>
	<%= link_to 'Delete', post_path(post), method: :delete, data: { confirm: 'Sure?'} %> <br> 
<% end %>