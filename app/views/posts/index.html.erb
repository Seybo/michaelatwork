<% @posts.each do |post| %>
  <h2 align="center"><%= post.title %></h2> <br>	
	<%= markdown(post.body) %>
	<%= link_to 'Read more', post_path(post) %>
	<div align="right"><%= post.created_at.strftime("%B %d, %Y") %></div> <br>

	<% if current_user.try(:admin?) %>
		<%= link_to 'Edit', edit_admin_post_path(post) %>
		<%= link_to 'Delete', admin_post_path(post), method: :delete, data: { confirm: 'Sure?'} %> <br> 
	<% end %>
<% end %>