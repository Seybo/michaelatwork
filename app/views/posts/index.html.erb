<% @posts.each do |post| %>
  <h2 align="center"><%= post.title %></h2> <br>	

	<%= raw(truncate_html post.body, length: 1000) %>
	<%= link_to 'Read more', post_path(post) %>
	<div align="right"><%= post.created_at.strftime("%B %d, %Y") %></div> <br>

	<% if false %>
		<% if current_user.try(:admin?) %>
			<%= link_to 'Edit', edit_post_path(post) %>
			<%= link_to 'Delete', post_path(post), method: :delete, data: { confirm: 'Sure?'} %> <br> 
		<% end %>
	<% end %>
<% end %>